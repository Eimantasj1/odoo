<odoo>
    <record id="view_document_report_wizard_form" model="ir.ui.view">
        <field name="name">document_module.document_report_wizard.form</field>
        <field name="model">document_module.document_report_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="date_from" widget="date"/>
                    <field name="date_to" widget="date"/>
                    <field name="responsible_employee_id"/>
                </group>
                <footer>
                    <button string="Print Report" class="oe_highlight" type="object" name="print_report"/>
                    <button string="Cancel" class="oe_link" onclick="return {'type': 'ir.actions.act_window_close'}"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
